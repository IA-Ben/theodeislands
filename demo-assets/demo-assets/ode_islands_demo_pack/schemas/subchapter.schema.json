{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Subchapter",
  "type": "object",
  "required": [
    "id",
    "branch_of",
    "title"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "branch_of": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "choice_rules": {
      "type": "object",
      "properties": {
        "requires_any": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "requires_all": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "grade_min": {
          "type": "string",
          "enum": [
            "S",
            "A",
            "B",
            "C"
          ]
        },
        "requires_memory": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "reward_id": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": false
}